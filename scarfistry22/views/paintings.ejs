	 var large=document.getElementsByClassName("large");
	 var el = document.getElementById("a");
	 document.getElementById('a').style.backgroundImage = 'url(' + img + ')';
	
	 // id.setAttribute("data-magnify-src", "");
 	 id.src = img;
