   <h1 style="font-size: 40px;text-align: center;background-color:RGB(125,204,173); ">Checkout </h1>
  
    <main id="main" role="main" >
       

        <section id="checkout-container" style="background-color: white;">
            <div class="container">
                <div class="row py-5">
                    <div class="col-md-4 order-md-2 mb-4 space" >  
                     <!-- style="right: -15%;" -->
                        <h4 class="d-flex justify-content-between align-items-center mb-3" >
                            <!-- <span class="text-muted" >Your cart</span>  -->
                            <!-- style="right: -10%;" -->
                             <!-- <span class="badge badge-secondary badge-pill" style="background-color: RGB(125,204,173);">0</span>  -->
                        </h4>
                                 <% if(bag){%>
                                 <% var len = bag.length %>
                                
                        <ul class="list-group mb-3">
                            <% for(var i=0 ;i< len ;i++){%>
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0"><%=bag[i].item.name%></h6>
                                   <span class="badge badge-secondary badge-pill" style="background-color: RGB(125,204,173);"><%=bag[i].qty%></span>
                                     <%= console.log(bag[i].qty); %>
                                </div>
                                <img src= "<%= bag[i].item.imagepath%>" style="width: 15%; height: 15%;" >
                                <span class="text-muted"> <%=bag[i].item.price %></span>
                            </li>
                           <% } %>
                           <li class="list-group-item d-flex justify-content-between">
                                <span>Total </span>
                                <strong><%=price%> EGP</strong>
                            </li> 
                        </ul>

                        <% } %> 

                        <% if(!bag){%>
                         <ul class="list-group mb-3">
                            
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <span class="text-muted"> Your cart is empty</span>
                                  
                                </div>
                                
                            </li>
                           
                          
                        </ul>


                         <% } %> 
